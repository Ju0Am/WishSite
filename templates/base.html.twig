<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Welcome!{% endblock %}</title>
        <link rel="icon"
              href="{{ asset('/img/' ~ 'favicon.png') }}"
              type="image/x-icon">

        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet"
              integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
        {% block stylesheets %}
        {% endblock %}

        {% block javascripts %}
            {% block importmap %}{{ importmap('app') }}{% endblock %}
        {% endblock %}
    </head>
    <body>
        <header>
            <a href="{{ path('app_main') }}">Accueil</a>
            <a href="{{ path('app_about') }}">About us</a>
            <a href="{{ path('app_wish') }}">List</a>
            <a href="{{ path('app_detail', {'id': 1}) }}">Detail</a>
            <a href="{{ path('app_create') }}">Create</a>

        </header>

        <h1>Bucket List</h1>
        <img src="{{ asset('img/logo.png') }}" alt="img">

        <footer>
            <p>&copy;Bucket-List</p>
            <p>{{ "now"|date("Y") }}</p>
        </footer>

        {% for label, messages in app.flashes %}
        {% for message in messages %}
        <div class="alert alert--{{ label }}"> {{ message }} </div>
        {% endfor %}
        {% endfor %}
    {% block body %}{% endblock %}
    </body>
</html>
